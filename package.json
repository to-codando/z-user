{
  "name": "z-user",
  "version": "1.0.0",
  "author": "Rodrigo Rocha",
  "description": "User manager",
  "keywords": [],
  "license": "ISC",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start:dev": "pnpm build:dev",
    "start:prod": "pnpm build:prod",
    "start:coverage":"pnpm build:coverage && pnpm coverage",
    "start:test": "pnpm build:coverage && pnpm test && pnpm test:watcher",
    "test:watcher":"pnpm run-when-changed --watch './dist/**/*.js' --exec 'mocha  ./dist/tests/**/*.spec.js %s'",
    "clear": "shx rm -rf ./dist ./coverage",
    "test":"mocha ./dist/**/*.spec.js",
    "lint": "biome check --apply ./src",
    "serve":"npx http-server",
    "build:prod": "pnpm clear && pnpm lint && node --env-file=.env.production build.js && pnpm serve ./dist",
    "build:dev": "pnpm clear  && pnpm lint && node --env-file=.env.development build.js",
    "build:coverage": "pnpm clear && node --env-file=.env.spec.coverage build.js",
    "coverage":"c8 --reporter=text --reporter=lcov  mocha  ./dist/tests/**",
    "api:mock": "json-server --watch api/db.json"
  },
  "aliases": {
    "@/store": [
      "./dist/store/index.ts"
    ],
    "@/components/*": [
      "./dist/components"
    ],
    "@/utils/*": [
      "./dist/utils"
    ],
    "@/services/*": [
      "./dist/services"
    ],
    "@/assets/*": [
      "./dist/assets"
    ],
    "@/mock/*": [
      "./dist/mock"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^21.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "esbuild": "^0.17.11",
    "esbuild-copy-files-plugin": "^1.1.0",
    "esbuild-plugin-path-alias": "^1.0.7",
    "glob": "^9.2.1",
    "global-jsdom": "^8.7.0",
    "http-server": "^14.1.1",
    "install-peerdeps": "^3.0.3",
    "jsdom": "^21.1.1",
    "json-server": "^0.17.1",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.2",
    "biome": "0.3.3",
    "run-when-changed": "^2.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "htm": "^3.1.1",
    "iares": "1.1.3"
  }
}